@article{ ISI:000263130100010,
Author = {Rapant, S. and Bodis, D. and Vrana, K. and Cveckova, V. and Kordik, J.
   and Krcmova, K. and Slaninka, I.},
Title = {{Geochemical Atlas of Slovakia and examples of its applications to

@article{ ISI:000399692500011,
Author = {Tongal, Hakan and Booij, Martijn J.},
Title = {{Quantification of parametric uncertainty of ANN models with GLUE method
   for different streamflow dynamics}},
Journal = {{STOCHASTIC ENVIRONMENTAL RESEARCH AND RISK ASSESSMENT}},

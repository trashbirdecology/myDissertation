@article{ ISI:000342088900012,
Author = {Fajcikova, K. and Cveckova, V. and Stewart, A. and Rapant, S.},
Title = {{Health risk estimates for groundwater and soil contamination in the
   Slovak Republic: a convenient tool for identification and mapping of
   risk areas}},

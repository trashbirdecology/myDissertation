@article{ ISI:000255148300019,
Author = {Van Campenhout, Karen and Infante, Heidi Goenaga and Goemans, Geert and
   Belpaire, Claude and Adams, Freddy and Blust, Ronny and Bervoets, Lieven},
Title = {{A field survey of metal binding to metallothionein and other cytosolic
   ligands in liver of eels using an on-line isotope dilution method in
   combination with size exclusion (SE) high pressure liquid chromatography
   (HPLC) coupled to Inductively Coupled Plasma time-of-flight Mass

@article{ ISI:000368207400035,
Author = {Chen, Yao and Wang, Shu-Jin and Tsai, Chung-Chou and Zhang, Chang-Jiang},
Title = {{Assessment of subsidies to minimize environmental pollution by Intensive
   Hog Feeding Operation (IHFO)}},
Journal = {{JOURNAL OF CLEANER PRODUCTION}},

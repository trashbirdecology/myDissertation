@article{ ISI:000398714100019,
Author = {Hou, Jian and Chen, Heng and Xu, Jianzhong},
Title = {{External Knowledge Sourcing and Green Innovation Growth with
   Environmental and Energy Regulations: Evidence from Manufacturing in
   China}},

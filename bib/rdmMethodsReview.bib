@article{ ISI:000078598600020,
Author = {Chen, Z and Mayer, LM},
Title = {{Assessment of sedimentary Cu availability: A comparison of biomimetic
   and AVS approaches}},
Journal = {{ENVIRONMENTAL SCIENCE \& TECHNOLOGY}},

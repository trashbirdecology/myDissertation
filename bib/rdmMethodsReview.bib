@article{ ISI:000277738200011,
Author = {Sund, Patrik and Bath, Magnus and Mansson, Lars Gunnar},
Title = {{INVESTIGATION OF THE EFFECT OF AMBIENT LIGHTING ON CONTRAST SENSITIVITY

@article{ ISI:000356871500059,
Author = {Ashrafi, Khosro and Kalhor, Mostafa and Shafie-Pour, Majid and
   Esfahanian, Vahid},
Title = {{Numerical simulation of aerodynamic suspension of particles during wind
   erosion}},
Journal = {{ENVIRONMENTAL EARTH SCIENCES}},
Year = {{2015}},
Volume = {{74}},
Number = {{2}},
Pages = {{1569-1578}},
Month = {{JUL}},
Abstract = {{The wind erosion is the main cause of many environmental phenomena such
   as desertification, dust haze, sandstorms, and energy balance changes in
   the atmosphere. Wind erosion occurs when the friction velocity exceeds
   the threshold friction velocity. Threshold friction velocity depends on
   many parameters such as surface roughness, heat flux, moisture of soil
   and soil texture. In this article, the horizontal and vertical fluxes of
   particles due to wind erosion have been studied using a numerical
   method. Atmospheric boundary layer has been modeled with computational
   fluid dynamic for different wind profiles and the flow field near the
   surface has been solved. The values of velocity's components of air flow
   have been used to calculate wind erosion fluxes according to balance
   equations of particles. The erosion flux of particles in terms of
   suspension, saltation and creeping have been calculated according to
   threshold friction velocities. Finally, the relation between fluxes has
   been determined and the correlation of erosion flux and direct
   suspension in terms of friction velocity and particle diameter has been
   presented. Comparing the results with previous works revealed that the
   value of direct suspension of particle C (kg/ms) is related to total
   erosion flux Q (kg/ms) as Q = 30,553 C (2) + 6.4316 C + 0.0017.}},
DOI = {{10.1007/s12665-015-4153-9}},
ISSN = {{1866-6280}},
EISSN = {{1866-6299}},
ResearcherID-Numbers = {{Ashrafi, Khosro/U-2412-2018}},

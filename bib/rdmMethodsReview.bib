@article{ ISI:000292411000003,
Author = {Crepin, Anne-Sophie and Norberg, Jon and Maler, Karl-Goran},
Title = {{Coupled economic-ecological systems with slow and fast dynamics -
   Modelling and analysis method}},
Journal = {{ECOLOGICAL ECONOMICS}},
Year = {{2011}},
Volume = {{70}},
Number = {{8}},
Pages = {{1448-1458}},
Month = {{JUN 15}},
Abstract = {{The purpose of this article is to contribute to the exploration of
   non-convex dynamics in coupled human-nature systems. We study welfare
   issues associated with the management of a human-nature complex adaptive
   system with a threshold and a stochastic driver. We exemplify with a
   specific system where we link changes in the number and diversity of
   birds to the abundance of a pest (insects) that causes damages to goods
   and services valuable to human beings. We present a method that
   simplifies the analysis and helps us discuss different management models

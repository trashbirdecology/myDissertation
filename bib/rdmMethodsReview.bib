ResearcherID-Numbers = {{Dudziak, Andrzej/T-4161-2018
   Borc, Robert/D-4842-2017}},
ORCID-Numbers = {{Dudziak, Andrzej/0000-0002-4555-0810
   Borc, Robert/0000-0003-1598-7605}},
Unique-ID = {{ISI:000316645600026}},
}

@article{ ISI:000316645600053,
Author = {Korban, Zygmunt and Profaska, Marek},
Title = {{Evaluation of Quality Management of Health and Safety in Workplace

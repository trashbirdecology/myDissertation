}

@article{ ISI:000170467700006,
Author = {Moffatt, I and Hanley, N},
Title = {{Modelling sustainable development: systems dynamic and input-ouput
   approaches}},
Journal = {{ENVIRONMENTAL MODELLING \& SOFTWARE}},
Year = {{2001}},
Volume = {{16}},
Number = {{6, SI}},
Pages = {{545-557}},
Abstract = {{This paper discusses alternative approaches to modelling
   economy-environment systems from the perspective of sustainable
   development. We distinguish between systems' dynamic methods and
   economic approaches, including input-output (I/O) models. We then
   discuss the structure of two models constructed for Scotland. Firstly, a
   hierarchical, dynamic model is used to look at long-term trends in

@article{ ISI:000248802900005,
Author = {Kimura, Sonoko D. and Mu, Zhijian and Toma, Yo and Hatano, Ryusuke},
Title = {{Eco-balance analysis of six agricultural land uses in the Ikushunbetsu
   watershed}},
